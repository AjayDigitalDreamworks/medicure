<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MEDICURE - OPD Management Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="/css/opd.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
</head>
<body>
<div class="dashboard-layout">
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="sidebar-header">
            <h1 class="medicure-logo">
                <i class="bi bi-hospital"></i> Medicure
            </h1>
        </div>
        
        <nav class="sidebar-nav">
            <a href="/admin/dashboard" class="nav-item active">
                <i class="bi bi-clipboard-data"></i>
                <span>OPD Management</span>
            </a>
            <a href="/admin/appointments" class="nav-item">
                <i class="bi bi-person-check"></i>
                <span>Appointments</span>
            </a>
            <a href="/admin/bed" class="nav-item">
                <i class="bi bi-hospital"></i>
                <span>Bed Management</span>
            </a>
            <a href="/admin/inventory" class="nav-item">
                <i class="bi bi-box-seam"></i>
                <span>Inventory</span>
            </a>
            <a href="javascript:[0]" class="nav-item">
                <i class="bi bi-file-earmark-medical"></i>
                <span>Upload Medical Record</span>
            </a>
        </nav>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Header -->
        <header class="content-header">
            <div class="header-left">
                <h1>OPD Management Dashboard</h1>
            </div>
            
            <div class="header-right">
                <div class="doctor-profile">
                    <img src="https://randomuser.me/portraits/men/75.jpg" alt="" class="doctor-avatar">
                    <div class="doctor-info">
                        <h3 id="user-name">Loading...</h3>
                        <p id="user-role">Role</p>
                        <span class="email" id="user-email">Email</span>
                        <div class="status-indicator">
                            <span class="status-dot online"></span>
                            <span>Online</span>
                        </div>
                    </div>
                </div>
                <button class="notification-btn">
                    <i class="bi bi-person-circle"></i>
                </button>
            </div>
        </header>

        <!-- Stats Cards -->
        <div class="stats-section">
            <div class="stat-card">
                <div class="stat-icon patients-queue">
                    <i class="bi bi-people"></i>
                </div>
                <div class="stat-content">
                    <h2 id="queue-count">-</h2>
                    <p class="stat-title">Patients in Queue</p>
                    <span class="stat-subtitle">Currently waiting</span>
                </div>
            </div>
            
            <div class="stat-card">
                <div class="stat-icon available-doctors">
                    <i class="bi bi-person-check"></i>
                </div>
                <div class="stat-content">
                    <h2 id="available-doctors-count">-</h2>
                    <p class="stat-title">Available Doctors</p>
                    <span class="stat-subtitle">Ready for consultation</span>
                </div>
            </div>
            
            <div class="stat-card">
                <div class="stat-icon wait-time">
                    <i class="bi bi-clock"></i>
                </div>
                <div class="stat-content">
                    <h2 id="avg-wait-time">-</h2>
                    <p class="stat-title">Average Wait Time</p>
                    <span class="stat-subtitle">For new patients</span>
                </div>
            </div>
            
            <div class="stat-card">
                <div class="stat-icon appointments">
                    <i class="bi bi-calendar-event"></i>
                </div>
                <div class="stat-content">
                    <h2 id="upcoming-appointments">-</h2>
                    <p class="stat-title">Upcoming Appointments</p>
                    <span class="stat-subtitle">Scheduled today</span>
                </div>
            </div>
        </div>

        <!-- Appointment Requests -->
        <div class="section-card">
            <div class="section-header">
                <h3>Appointment Requests</h3>
                <a href="#" class="view-all-link">View All</a>
            </div>
            
            <div class="table-container">
                <table class="data-table" id="appointment-requests-table">
                    <thead>
                        <tr>
                            <th>Patient Name</th>
                            <th>Appointment Time</th>
                            <th>Doctor Assigned</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr><td colspan="5">Loading...</td></tr>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- OPD Queue Details -->
        <div class="section-card">
            <div class="section-header">
                <h3>OPD Queue Details</h3>
                <div class="section-actions">
                    <button id="btn-add-queue" class="btn btn-primary">+ Add To Queue</button>
                    <a href="#" class="view-all-link">View All</a>
                </div>
            </div>
            
            <div class="table-container">
                <table class="data-table" id="opd-queue-table">
                    <thead>
                        <tr>
                            <th>Token</th>
                            <th>Patient Name</th>
                            <th>Wait Time</th>
                            <th>Doctor</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr><td colspan="5">Loading queue...</td></tr>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Footer -->
        <footer class="dashboard-footer">
            <div class="footer-links">
                <a href="#">Resources</a>
                <a href="#">Legal</a>
            </div>
            <div class="footer-social">
                <i class="bi bi-facebook"></i>
                <i class="bi bi-twitter"></i>
                <i class="bi bi-linkedin"></i>
            </div>
        </footer>
    </div>
</div>

<script>
const baseURL = window.location.origin;

// Utility: format time nicely
function formatTime(dateString) {
    const d = new Date(dateString);
    return d.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
}

async function fetchUserProfile() {
    try {
        const res = await axios.get(`${baseURL}/api/user/profile`); // make sure this route gives user data
        const user = res.data;
        console.log(user);
        document.getElementById('user-name').textContent = user.name;
        document.getElementById('user-role').textContent = user.role;
        document.getElementById('user-email').textContent = user.email;
    } catch (err) {
        console.error('Error fetching profile:', err);
    }
}

async function fetchStats() {
    try {
        const res = await axios.get(`${baseURL}/admin/dashboard`); 
        // Example: backend route that returns queue count, average wait time, etc.
        const stats = res.data.stats;
        console.log(res);
        console.log(stats);
        document.getElementById('queue-count').textContent = stats.currentQueue || 0;
        document.getElementById('available-doctors-count').textContent = stats.availableDoctors || 0;
        document.getElementById('avg-wait-time').textContent = stats.averageWaitTime || "-";
        document.getElementById('upcoming-appointments').textContent = stats.upcomingAppointmentsToday || 0;
    } catch (err) {
        console.error('Error fetching stats:', err);
    }
}

async function fetchAppointmentRequests() {
    try {
        const res = await axios.get(`${baseURL}/admin/appointments/requests?status=pending`);
        const tableBody = document.querySelector('#appointment-requests-table tbody');
        tableBody.innerHTML = '';
        const appointments = res.data.appointments;
        if (!appointments || appointments.length === 0) {
            tableBody.innerHTML = '<tr><td colspan="5">No appointment requests</td></tr>';
            return;
        }
        appointments.forEach(appt => {
            const tr = document.createElement('tr');
            tr.innerHTML = `
                <td>${appt.patient.name}</td>
                <td>${formatTime(appt.date)}</td>
                <td>${appt.doctor.name}</td>
                <td><span class="status-badge ${appt.status.toLowerCase()}">${appt.status}</span></td>
                <td>
                  <button class="btn btn-sm btn-danger btn-reject" data-id="${appt._id}">Reject</button>
                  <button class="btn btn-sm btn-success btn-approve" data-id="${appt._id}">Approve</button>
                </td>
            `;
            tableBody.appendChild(tr);
        });
    } catch (err) {
        console.error('Error fetching appointment requests:', err);
    }
}

async function fetchQueueDetails() {
    try {
        const res = await axios.get(`${baseURL}/admin/opd/queue`); // backend route for OPD queue
        const tableBody = document.querySelector('#opd-queue-table tbody');
        tableBody.innerHTML = '';
        const items = res.data.queue;
        if (!items || items.length === 0) {
            tableBody.innerHTML = '<tr><td colspan="5">No queue data</td></tr>';
            return;
        }
        items.forEach(item => {
            const tr = document.createElement('tr');
            const waitTime = item.waitTimeMinutes ? item.waitTimeMinutes + ' min' : '-';
            tr.innerHTML = `
                <td>${item.token}</td>
                <td>${item.patient.name}</td>
                <td>${waitTime}</td>
                <td>${item.doctor.name}</td>
                <td><span class="status-badge ${item.status.toLowerCase()}">${item.status}</span></td>
            `;
            tableBody.appendChild(tr);
        });
    } catch (err) {
        console.error('Error fetching queue details:', err);
    }
}

function startPolling() {
    fetchUserProfile();
    fetchStats();
    fetchAppointmentRequests();
    fetchQueueDetails();

    // Poll every 15 seconds (or some interval you prefer)
    setInterval(() => {
        fetchStats();
        fetchAppointmentRequests();
        fetchQueueDetails();
    }, 15000);
}

startPolling();

// Handling approve/reject clicks
document.querySelector('#appointment-requests-table').addEventListener('click', async (e) => {
    if (e.target.matches('.btn-approve')) {
        const apptId = e.target.dataset.id;
        await axios.post(`${baseURL}/admin/appointments/${apptId}/approve`);
        fetchAppointmentRequests(); // refresh
    }
    if (e.target.matches('.btn-reject')) {
        const apptId = e.target.dataset.id;
        await axios.post(`${baseURL}/admin/appointments/${apptId}/reject`);
        fetchAppointmentRequests();
    }
});

document.getElementById('btn-add-queue').addEventListener('click', () => {
    // Show modal or form to add to queue
    alert('Add to queue form opening...');
});

</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
