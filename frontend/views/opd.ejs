<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
// Interactive functionality
document.querySelectorAll('.btn-approve').forEach(btn => {
    btn.addEventListener('click', function() {
        const row = this.closest('tr');
        const statusBadge = row.querySelector('.status-badge');
        statusBadge.textContent = 'Approved';
        statusBadge.className = 'status-badge approved';
        
        const actionCell = row.querySelector('td:last-child');
        actionCell.innerHTML = `
            <button class="btn-action secondary">Chat</button>
            <button class="btn-action">Manage</button>
        `;
    });
});

document.querySelectorAll('.btn-reject').forEach(btn => {
    btn.addEventListener('click', function() {
        const row = this.closest('tr');
        const statusBadge = row.querySelector('.status-badge');
        statusBadge.textContent = 'Rejected';
        statusBadge.className = 'status-badge rejected';
        
        const actionCell = row.querySelector('td:last-child');
        actionCell.innerHTML = `<button class="btn-action">Manage</button>`;
    });
});

// Add to queue functionality
document.querySelector('.btn-add-queue').addEventListener('click', function() {
    alert('Add to queue functionality - would open a modal to add new patient to queue');
});

// Quick actions
document.querySelectorAll('.action-item').forEach(item => {
    item.addEventListener('click', function() {
        const actionName = this.querySelector('span').textContent;
        alert(`Opening ${actionName} interface...`);
    });
});
</script>
