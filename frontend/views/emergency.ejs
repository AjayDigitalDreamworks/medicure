    <!-- Custom JavaScript -->
   <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script>
const API_URL = "http://localhost:3000/api/emergency";

// Load metrics
async function loadMetrics() {
  const res = await axios.get(`${API_URL}/dashboard`);
  const m = res.data;
  document.getElementById("activeEmergencies").textContent = m.activeEmergencies;
  document.getElementById("ambulancesEnRoute").textContent = m.ambulancesEnRoute;
  document.getElementById("emergencyBedsAvailable").textContent = m.emergencyBedsAvailable;
  document.getElementById("responseTimeAvg").textContent = m.responseTimeAvg;
}

// Load activity
async function loadActivity() {
  const res = await axios.get(`${API_URL}/activity`);
  const list = res.data;
  const container = document.getElementById("activityList");
  container.innerHTML = "";
  list.forEach(a => {
    container.appendChild(createActivityElement(a));
  });
  feather.replace();
}

// Create activity card
function createActivityElement(activity) {
  const div = document.createElement("div");
  div.className = "activity-item";

  let iconType = "heart";
  let iconClass = "icon-critical";
  if (activity.type === "Traffic Accident") {
    iconType = "truck"; iconClass = "icon-urgent";
  } else if (activity.type === "Respirator Failure") {
    iconType = "home"; iconClass = "icon-monitoring";
  }

  div.innerHTML = `
    <div class="activity-icon ${iconClass}">
      <i data-feather="${iconType}"></i>
    </div>
    <div class="flex-grow-1">
      <h6 class="mb-1">${activity.type}</h6>
      <p class="mb-0 text-muted">${activity.patient ? activity.patient + " â€¢ " : ""}${activity.location}</p>
    </div>
    <div class="text-end">
      <span class="status-badge ${activity.status}">${activity.status}</span>
      <div class="activity-time">${activity.time}</div>
    </div>`;
  return div;
}

// Add patient
async function addPatient() {
  const form = document.getElementById("patientForm");
  const formData = Object.fromEntries(new FormData(form));
  if (!formData.emergencyType || !formData.priority || !formData.location || !formData.patientName) {
    form.reportValidity();
    return;
  }

  await axios.post(`${API_URL}/patient`, formData);
  await loadMetrics();
  await loadActivity();

  bootstrap.Modal.getInstance(document.getElementById("patientModal")).hide();
  form.reset();
  alert("Patient added successfully!");
}

// Init
document.addEventListener("DOMContentLoaded", () => {
  loadMetrics();
  loadActivity();

  // Open modal
  document.getElementById("addPatientBtn").addEventListener("click", () => {
    new bootstrap.Modal(document.getElementById("patientModal")).show();
  });

  // Save patient
  document.getElementById("savePatientBtn").addEventListener("click", addPatient);

  // Refresh button
  document.querySelector(".btn-outline-secondary.me-2:nth-child(2)")
    .addEventListener("click", () => {
      loadMetrics();
      loadActivity();
    });
});

// Poll every 5s
setInterval(() => { loadMetrics(); loadActivity(); }, 5000);
</script>

