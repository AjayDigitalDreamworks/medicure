    <!-- Custom CSS -->
    <style>
        :root {
            --primary-red: #DC3545;
            --primary-orange: #FD7E14;
            --primary-blue: #0D6EFD;
            --primary-green: #198754;
            --text-primary: #212529;
            --text-secondary: #6C757D;
            --text-muted: #ADB5BD;
            --bg-light: #F8F9FA;
            --bg-white: #FFFFFF;
            --border-light: #DEE2E6;
            --shadow-sm: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            --shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }

        * {
            transition: all 0.2s ease-in-out;
        }
        
        body {
            background-color: var(--bg-light);
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            color: var(--text-primary);
            line-height: 1.5;
        }
        
        .header-card {
            background: var(--bg-white);
            border-radius: 12px;
            box-shadow: var(--shadow-sm);
            border: 1px solid var(--border-light);
            margin-bottom: 32px;
            padding: 24px;
        }
        
        .logo-icon {
            color: var(--primary-red);
            width: 22px;
            height: 22px;
        }
        
        .logo-text {
            font-weight: 600;
            color: var(--primary-red);
            font-size: 1.1rem;
        }
        
        .warning-icon {
            color: var(--primary-orange);
            width: 22px;
            height: 22px;
        }
        
        .header-title h1 {
            font-size: 1.5rem;
            font-weight: 600;
            color: var(--text-primary);
            margin: 0;
        }
        
        .metric-card {
            background: var(--bg-white);
            border-radius: 16px;
            box-shadow: var(--shadow-sm);
            border: 2px solid;
            padding: 24px;
            margin-bottom: 24px;
            position: relative;
            overflow: hidden;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }
        
        .metric-card:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow);
        }
        
        .metric-card.red { border-color: var(--primary-red); }
        .metric-card.orange { border-color: var(--primary-orange); }
        .metric-card.blue { border-color: var(--primary-blue); }
        .metric-card.green { border-color: var(--primary-green); }
        
        .metric-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
        }
        
        .metric-card.red::before { background: var(--primary-red); }
        .metric-card.orange::before { background: var(--primary-orange); }
        .metric-card.blue::before { background: var(--primary-blue); }
        .metric-card.green::before { background: var(--primary-green); }
        
        .metric-value {
            font-size: 2.75rem;
            font-weight: 700;
            margin: 12px 0 8px 0;
            line-height: 1;
        }
        
        .metric-card.red .metric-value { color: var(--primary-red); }
        .metric-card.orange .metric-value { color: var(--primary-orange); }
        .metric-card.blue .metric-value { color: var(--primary-blue); }
        .metric-card.green .metric-value { color: var(--primary-green); }
        
        .metric-title {
            font-weight: 600;
            color: var(--text-primary);
            font-size: 0.95rem;
            margin-bottom: 0;
        }
        
        .metric-subtitle {
            color: var(--text-secondary);
            font-size: 0.85rem;
            margin-top: 4px;
        }
        
        .metric-icon {
            opacity: 0.8;
        }
        
        .nav-tabs {
            border-bottom: 2px solid var(--border-light);
            margin-bottom: 32px;
        }
        
        .nav-tabs .nav-link {
            border: none;
            color: var(--text-secondary);
            background: none;
            padding: 12px 24px;
            font-weight: 500;
            border-radius: 8px 8px 0 0;
            margin-right: 8px;
        }
        
        .nav-tabs .nav-link:hover {
            color: var(--text-primary);
            background-color: rgba(13, 110, 253, 0.1);
        }
        
        .nav-tabs .nav-link.active {
            background-color: var(--primary-blue);
            color: white;
            border-radius: 8px 8px 0 0;
        }
        
        .action-card {
            background: var(--bg-white);
            border-radius: 16px;
            box-shadow: var(--shadow-sm);
            border: 1px solid var(--border-light);
            padding: 24px;
            margin-bottom: 24px;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }
        
        .action-card:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow);
        }
        
        .action-icon {
            width: 24px;
            height: 24px;
            margin-right: 12px;
        }
        
        .action-icon.red { color: var(--primary-red); }
        .action-icon.orange { color: var(--primary-orange); }
        .action-icon.blue { color: var(--primary-blue); }
        
        .btn-red { 
            background-color: var(--primary-red); 
            border-color: var(--primary-red);
            border-radius: 8px;
            font-weight: 500;
            padding: 10px 20px;
        }
        .btn-orange { 
            background-color: var(--primary-orange); 
            border-color: var(--primary-orange);
            border-radius: 8px;
            font-weight: 500;
            padding: 10px 20px;
        }
        .btn-blue { 
            background-color: var(--primary-blue); 
            border-color: var(--primary-blue);
            border-radius: 8px;
            font-weight: 500;
            padding: 10px 20px;
        }
        
        .btn-primary {
            background-color: var(--primary-red);
            border-color: var(--primary-red);
            border-radius: 8px;
            font-weight: 500;
            padding: 10px 20px;
        }
        
        .btn-outline-secondary {
            border-radius: 8px;
            font-weight: 500;
            padding: 10px 16px;
        }
        
        .activity-item {
            background: var(--bg-white);
            border-radius: 12px;
            box-shadow: var(--shadow-sm);
            border: 1px solid var(--border-light);
            padding: 20px;
            margin-bottom: 16px;
            display: flex;
            align-items: center;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }
        
        .activity-item:hover {
            transform: translateY(-1px);
            box-shadow: var(--shadow);
        }
        
        .activity-icon {
            width: 44px;
            height: 44px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 16px;
            font-size: 18px;
        }
        
        .icon-critical { 
            background-color: rgba(220, 53, 69, 0.1); 
            color: var(--primary-red);
        }
        .icon-urgent { 
            background-color: rgba(253, 126, 20, 0.1); 
            color: var(--primary-orange);
        }
        .icon-monitoring { 
            background-color: rgba(13, 110, 253, 0.1); 
            color: var(--primary-blue);
        }
        
        .status-badge {
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 600;
            text-transform: capitalize;
        }
        
        .status-badge.critical { 
            background-color: rgba(220, 53, 69, 0.1); 
            color: var(--primary-red);
        }
        .status-badge.urgent { 
            background-color: rgba(253, 126, 20, 0.1); 
            color: var(--primary-orange);
        }
        .status-badge.monitoring { 
            background-color: rgba(13, 110, 253, 0.1); 
            color: var(--primary-blue);
        }
        
        .activity-time {
            color: var(--text-muted);
            font-size: 0.85rem;
            margin-left: 12px;
            font-weight: 500;
        }
        
        .activity-details h6 {
            font-weight: 600;
            color: var(--text-primary);
            margin-bottom: 4px;
        }
        
        .activity-details p {
            color: var(--text-secondary);
            margin-bottom: 0;
            font-size: 0.9rem;
        }
        
        .section-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--text-primary);
            margin-bottom: 8px;
        }
        
        .section-subtitle {
            color: var(--text-secondary);
            font-size: 1rem;
            margin-bottom: 24px;
        }
        
        .modal-content {
            border-radius: 16px;
            border: none;
            box-shadow: var(--shadow);
        }
        
        .modal-header {
            border-bottom: 1px solid var(--border-light);
            border-radius: 16px 16px 0 0;
        }
        
        .form-control, .form-select {
            border-radius: 8px;
            border: 1px solid var(--border-light);
            padding: 12px 16px;
        }
        
        .form-control:focus, .form-select:focus {
            border-color: var(--primary-blue);
            box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
        }
        
        @media (max-width: 768px) {
            .header-card {
                padding: 16px;
            }
            
            .metric-card {
                padding: 20px;
            }
            
            .metric-value {
                font-size: 2.25rem;
            }
            
            .action-card {
                padding: 20px;
            }
        }
        
    </style>
</head>
<body>
    <div class="container-fluid py-4">
        <!-- Header -->
        <div class="header-card p-4">
            <div class="row align-items-center">
                <div class="col-md-6 d-flex align-items-center">
                    <div class="d-flex align-items-center me-4">
                        <i data-feather="activity" class="logo-icon me-2"></i>
                        <span class="logo-text">logo</span>
                    </div>
                    <div class="d-flex align-items-center">
                        <i data-feather="alert-triangle" class="warning-icon me-2"></i>
                        <h1 class="mb-0 h3">Emergency Management</h1>
                    </div>
                </div>
                <div class="col-md-6 text-end">
                    <button class="btn btn-outline-secondary me-2">
                        <i data-feather="bell" class="me-1"></i>
                        Alert All
                    </button>
                    <button class="btn btn-outline-secondary me-2">
                        <i data-feather="refresh-cw" class="me-1"></i>
                        Refresh
