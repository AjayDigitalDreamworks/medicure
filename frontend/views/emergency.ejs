            </div>
        </div>

        <!-- Navigation Tabs -->
        <ul class="nav nav-tabs mb-4">
            <li class="nav-item">
                <a class="nav-link active" href="#overview">Overview</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#active-cases">Active Cases</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#ambulances">Ambulances</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#contacts">Contacts</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#protocols">Protocols</a>
            </li>
        </ul>

        <!-- Action Sections -->
        <div class="row mb-4">
            <div class="col-lg-4 col-md-6">
                <div class="action-card">
                    <div class="d-flex align-items-center mb-3">
                        <i data-feather="alert-triangle" class="action-icon red"></i>
                        <h5 class="mb-0">Code Red Alert</h5>
                    </div>
                    <p class="text-muted">Activate a hospital-wide emergency protocol for critical situations.</p>
                    <button class="btn btn-red text-white">Activate Hospital Emergency Protocol</button>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="action-card">
                    <div class="d-flex align-items-center mb-3">
                        <i data-feather="truck" class="action-icon orange"></i>
                        <h5 class="mb-0">Ambulance Dispatch</h5>
