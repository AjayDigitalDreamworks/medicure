                    <button class="btn btn-primary" id="addPatientBtn">
                        <i data-feather="plus" class="me-1"></i>
                        Add Patient
                    </button>
                </div>
            </div>
        </div>

        <!-- Metrics Cards -->
        <div class="row mb-4">
            <div class="col-lg-3 col-md-6">
                <div class="metric-card red">
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="metric-title">Active Emergencies</span>
                        <i data-feather="alert-triangle"></i>
                    </div>
                    <div class="metric-value" id="activeEmergencies">12</div>
                    <div class="metric-subtitle">Currently ongoing incidents</div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="metric-card orange">
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="metric-title">Ambulances En Route</span>
                        <i data-feather="truck"></i>
                    </div>
                    <div class="metric-value" id="ambulancesEnRoute">8</div>
                    <div class="metric-subtitle">Vehicles currently dispatched</div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="metric-card blue">
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="metric-title">Emergency Beds Available</span>
                        <i data-feather="home"></i>
                    </div>
                    <div class="metric-value" id="emergencyBedsAvailable">3</div>
                    <div class="metric-subtitle">ICU/Trauma beds ready</div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="metric-card green">
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="metric-title">Response Time Avg</span>
                        <i data-feather="clock"></i>
                    </div>
                    <div class="metric-value" id="responseTimeAvg">4.2m</div>
                    <div class="metric-subtitle">Average response duration</div>
