<%- include('./partials/sidebar.ejs') %>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit Bed Details</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>

    .edit-card {
      max-width: 800px;
      margin: 4rem auto;
      background-color: #fff;
      padding: 2rem;
      border-radius: 8px;
    }
    .btn-outline-danger {
      border-width: 2px;
    }
  </style>
</head>
<body>
<div class="container">
  <div class="edit-card shadow">
    <h4 class="fw-bold mb-1">Edit Bed Details</h4>
    <p class="text-muted mb-4">Update the information for the selected bed.</p>

    <form action="/admin/bed/<%= bed._id %>?_method=PUT" method="POST">
      <div class="row g-3">
        <div class="col-md-6">
          <label class="form-label">Bed ID</label>
          <input name="bedId" type="text" class="form-control" value="<%= bed.bedId %>" required>
        </div>
        <div class="col-md-6">
          <label class="form-label">Room Number</label>
          <input name="room" type="text" class="form-control" value="<%= bed.room %>" required>
        </div>

        <div class="col-md-6">
          <label class="form-label">Bed Type</label>
          <select name="condition" class="form-select">
            <option value="Standard" <%= bed.condition === 'Standard' ? 'selected' : '' %>>Standard</option>
            <option value="ICU" <%= bed.condition === 'ICU' ? 'selected' : '' %>>ICU</option>
            <option value="Emergency" <%= bed.condition === 'Emergency' ? 'selected' : '' %>>Emergency</option>
          </select>
        </div>
        <div class="col-md-6">
          <label class="form-label">Status</label>
          <select name="status" class="form-select" required>
            <option value="available" <%= bed.status === 'available' ? 'selected' : '' %>>Available</option>
            <option value="occupied" <%= bed.status === 'occupied' ? 'selected' : '' %>>Occupied</option>
          </select>
        </div>

        <div class="col-md-6">
          <label class="form-label">Department</label>
          <select name="ward" class="form-select">
            <option value="Cardiology" <%= bed.ward === 'Cardiology' ? 'selected' : '' %>>Cardiology</option>
            <option value="Oncology" <%= bed.ward === 'Oncology' ? 'selected' : '' %>>Oncology</option>
            <option value="Neurology" <%= bed.ward === 'Neurology' ? 'selected' : '' %>>Neurology</option>
          </select>
        </div>
        <div class="col-md-6">
          <label class="form-label">Patient Name</label>
          <input name="patientName" type="text" class="form-control" value="<%= bed.patient ? bed.patient.name : '' %>">
        </div>

        <div class="col-md-6">
          <label class="form-label">Patient ID</label>
          <input name="patientId" type="text" class="form-control" value="<%= bed.patient ? bed.patient.id : '' %>">
        </div>
        <div class="col-md-6">
          <label class="form-label">Doctor</label>
          <input name="doctor" type="text" class="form-control" value="<%= bed.doctor %>">
        </div>

        <div class="col-md-6">
          <label class="form-label">Admit Date</label>
          <input name="admitDate" type="date" class="form-control" value="<%= bed.admitDate ? bed.admitDate.toISOString().slice(0,10) : '' %>">
        </div>
        <div class="col-md-6">
          <label class="form-label">Discharge Date</label>
          <input name="dischargeDate" type="date" class="form-control" value="<%= bed.dischargeDate ? bed.dischargeDate.toISOString().slice(0,10) : '' %>">
        </div>
      </div>

      <div class="d-flex justify-content-between align-items-center mt-4">
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <div>
          <a href="/admin/bed" class="btn btn-outline-secondary me-2">Cancel</a>
          <a href="/admin/bed/<%= bed._id %>/delete" class="btn btn-outline-danger">DELETE</a>
        </div>
      </div>
    </form>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
