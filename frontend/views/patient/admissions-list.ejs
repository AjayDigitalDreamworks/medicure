<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MediCure - Patient Dashboard</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Custom CSS -->
    <link href="/css/login-style.css" rel="stylesheet" />
    <link href="/css/book.css" rel="stylesheet" />
    <link href="/css/dash-style.css" rel="stylesheet" />
</head>
<style>
    .calendar-grid {
        display: grid;
        grid-template-columns: repeat(7, 1fr);
        gap: 5px;
        text-align: center;
    }

    .calendar-day {
        padding: 10px;
        background-color: #f4f4f4;
        cursor: pointer;
        border-radius: 5px;
    }

    .calendar-day:hover {
        background-color: #007bff;
        color: white;
    }

    .empty {
        background-color: transparent;
    }

    .time-slot {
        padding: 10px;
        margin: 5px 0;
        background-color: #f4f4f4;
        cursor: pointer;
        border-radius: 5px;
    }

    .time-slot:hover {
        background-color: #007bff;
        color: white;
    }
</style>

<body>
    <div class="d-flex">
        <!-- Sidebar (unchanged) -->
        <nav class="sidebar bg-light">
            <div class="sidebar-header p-3">
                <h4 class="text-primary fw-bold">
                   <i class="fas fa-heartbeat"></i>Medicure
                </h4>
            </div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" href="/patient/dashboard">
                        <i class="bi bi-speedometer2"></i> Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/patient/bookappointments">
                        <i class="bi bi-calendar-check"></i> Book Appointment
                    </a>
                </li>

                 <li class="nav-item">
                <a class="nav-link" href="/patient/admission/list">
                    <i class="bi bi-calendar-check"></i> View Medical Records
                </a>
            </li>
                <li class="nav-item">
                    <a class="nav-link" href="/patient/admission">
                        <i class="bi bi-person-plus"></i> Admit Records
                    </a>
                </li>
            </ul>
            
        </nav>

        <!-- Main Content -->
        <main class="main-content flex-grow-1">
            <div class="top-bar bg-white border-bottom p-3 d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Patient Records</h5>
            <div class="d-flex align-items-center gap-3">
                <button class="btn btn-light"><i class="bi bi-person-circle fs-4 text-muted"></i></button>
                <a class="dropdown-item" href="/api/auth/logout"
                  ><i class="bi bi-box-arrow-right"></i> Logout</a>
            </div>
        </div>

            <!-- Content Area -->
            <div class="content-area p-4">
                <!-- My Appointments Section -->
                <section class="appointments-section mt-4">
                    <h2>Medical Records </h2>
                    <p class="subtitle">Overview of your medical records.</p>

                    <div class="table-responsive">
                        <table class="table table-bordered table-hover align-middle text-center">
                            <thead class="table-primary">
                                <tr>
                                    <th>Full Name</th>
                <th>Department</th>
                <th>Preferred Doctor</th>
                <th>Preferred Date</th>
                <th>Emergency</th>
                <th>Emergency Reason</th>
                <th>Documents</th>
                <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                               <% if (admissions.length===0) { %>
    <tr>
                                                    <td colspan="6" class="text-muted">No records.</td>
                                                </tr>
                              <% } else { %>
                                     <% admissions.forEach(ad=> { %>
                                        <tr>
                                            <td>
                                                <%= ad.fullName %>
                                            </td>
                                            <td>
                                                 <%= ad.department %>
                                            </td>
                                            <td>
                                               <%= ad.preferredDoctor %>
                                            </td>
                                            <td>
                                               <%= ad.preferredDate ? ad.preferredDate.toDateString() : '' %>
                                            </td>
                                            <td>
                        <%= ad.emergencyCase ? "Yes" : "No" %>
                    </td>
                    <th><%= ad.emergencyReason %></th>
                                            <td>
                                                 <% ad.documents.forEach(doc=> { %>
                            <a href="<%= doc %>" target="_blank">View</a><br />
                             <% }) %>
                                            </td>
                                            <td>
                                                <form method="POST" action="/patient/admission/<%= ad._id %>/delete">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                                            </td>
                                        </tr>
                                        
                                            <% }) %>
                                                

                                                <% } %>
                                               
                            </tbody>
                        </table>
                    </div>
                </section>

            </div>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="/js/app.js"></script>
    <script src="/js/appointment.js"></script>
</body>

</html>


<!-- ========================================= -->

<h2>My Admissions</h2>

<% if (admissions.length===0) { %>
    <p>No admissions found.</p>
    <% } else { %>
        <table>
            <tr>
                <th>Full Name</th>
                <th>Department</th>
                <th>Preferred Doctor</th>
                <th>Preferred Date</th>
                <th>Emergency</th>
                <th>Documents</th>
                <th>Actions</th>
            </tr>
            <% admissions.forEach(ad=> { %>
                <tr>
                    <td>
                        <%= ad.fullName %>
                    </td>
                    <td>
                        <%= ad.department %>
                    </td>
                    <td>
                        <%= ad.preferredDoctor %>
                    </td>
                    <td>
                        <%= ad.preferredDate ? ad.preferredDate.toDateString() : '' %>
                    </td>
                    <td>
                        <%= ad.emergencyCase ? "Yes" : "No" %>
                    </td>
                    <td>
                        <% ad.documents.forEach(doc=> { %>
                            <a href="<%= doc %>" target="_blank">View</a><br />
                            <% }) %>
                    </td>
                    <td>
                        <form method="POST" action="/admission/<%= ad._id %>/cancel">
                            <button type="submit">Cancel</button>
                        </form>
                    </td>
                </tr>
                <% }) %>
        </table>
        <% } %>

            <%- include('../partials/footer') %>