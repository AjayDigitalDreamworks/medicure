<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MediCure - Patient Admission</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="/css/dash-patient.css" rel="stylesheet" />
    <link href="/css/admission.css" rel="stylesheet" />
</head>
<body>
<div class="d-flex">
    <!-- Sidebar -->
    <nav class="sidebar bg-light">
        <div class="sidebar-header p-3">
            <h4 class="medicure-logo">
                <i class="fas fa-heartbeat"></i> Medicure
            </h4>
        </div>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" href="/patient/dashboard">
                    <i class="bi bi-speedometer2"></i> Dashboard
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/patient/bookappointments">
                    <i class="bi bi-calendar-check"></i> Appointments
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" href="/patient/admission">
                    <i class="bi bi-person-plus"></i> Admit a patient
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/patient/admission/list">
                    <i class="bi bi-file-text"></i> Reports
                </a>
            </li>
        </ul>
        
        <div class="sidebar-footer">
            <div class="settings-link">
                <a href="#settings" class="nav-link">
                    <i class="bi bi-gear"></i> Settings
                </a>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="main-content flex-grow-1">
        <div class="top-bar bg-white border-bottom p-3 d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Patient Admission</h5>
            <div class="d-flex align-items-center gap-3">
                <!-- <div class="notification-icon">
                    <i class="bi bi-bell"></i>
                </div> -->
                <div class="profile-avatar">
                    <!-- <img src="https://via.placeholder.com/40x40/28a745/ffffff?text=A" alt="Profile" class="rounded-circle"> -->
                     <!-- <button class="btn btn-light"><i class="bi bi-person-circle fs-4 text-muted"></i></button> -->
                <a class="dropdown-item" href="/api/auth/logout">
                    <i class="bi bi-box-arrow-right"></i> Logout
                </a>
                </div>
            </div>
        </div>

        <div class="content-area p-4">
            <div class="admission-container">
                <form class="admission-form">
                    
                    <!-- Personal Details Section -->
                    <div class="form-section">
                        <h3 class="section-title">Personal Details</h3>
                        <div class="form-grid-3">
                            <div class="form-group">
                                <label for="fullName">Full Name</label>
                                <input type="text" class="form-control" id="fullName" placeholder="e.g., John Doe">
                            </div>
                            <div class="form-group">
                                <label for="fatherName">Father's Name</label>
                                <input type="text" class="form-control" id="fatherName" placeholder="e.g., Richard Doe">
                            </div>
                            <div class="form-group">
                                <label for="contactNumber">Contact Number</label>
                                <input type="tel" class="form-control" id="contactNumber" placeholder="e.g., +1(555) 123-4567">
                            </div>
                        </div>
                    </div>

                    <!-- Contact Address Section -->
                    <div class="form-section">
                        <h3 class="section-title">Contact Address</h3>
                        <div class="form-grid-3">
                            <div class="form-group">
                                <label for="streetAddress">Street Address</label>
                                <input type="text" class="form-control" id="streetAddress" placeholder="e.g., 123 Oak Avenue">
                            </div>
                            <div class="form-group">
                                <label for="district">District</label>
                                <input type="text" class="form-control" id="district" placeholder="e.g., Central District">
                            </div>
                            <div class="form-group">
                                <label for="stateProvince">State/Province</label>
                                <input type="text" class="form-control" id="stateProvince" placeholder="e.g., California">
                            </div>
                        </div>
                        <div class="form-group country-select">
                            <label for="country">Country</label>
                            <select class="form-control" id="country">
                                <option value="">Select a country</option>
                                <option value="us">United States</option>
                                <option value="uk">United Kingdom</option>
                                <option value="ca">Canada</option>
                                <option value="au">Australia</option>
                                <option value="in">India</option>
                                <option value="de">Germany</option>
                                <option value="fr">France</option>
                                <option value="jp">Japan</option>
                                <option value="br">Brazil</option>
                                <option value="mx">Mexico</option>
                            </select>
                        </div>
                    </div>

                    <!-- Medical History Section -->
                    <div class="form-section">
                        <h3 class="section-title">Medical History</h3>
                        <div class="form-group">
                            <label for="knownAllergies">Known Allergies</label>
                            <textarea class="form-control large-textarea" id="knownAllergies" rows="6" placeholder="List any known allergies or medical conditions (e.g., Penicillin, Peanuts)"></textarea>
                        </div>
                    </div>

                    <!-- Administrative Information Section -->
                    <div class="form-section">
                        <h3 class="section-title">Administrative Information</h3>
                        <div class="admin-grid">
                            <div class="form-group">
                                <label for="selectHospital">Select Hospital</label>
                                <select class="form-control" id="selectHospital">
                                    <option value="">Choose a hospital</option>
                                    <option value="general">General Hospital</option>
                                    <option value="specialty">Specialty Medical Center</option>
                                    <option value="emergency">Emergency Care Center</option>
                                    <option value="pediatric">Pediatric Hospital</option>
                                    <option value="cardiac">Cardiac Care Institute</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="idProofUpload">ID Proof Upload</label>
                                <div class="upload-area">
                                    <div class="upload-icon">
                                        <i class="bi bi-upload"></i>
                                    </div>
                                    <p class="upload-text">Drag & drop file or click to upload</p>
                                    <input type="file" id="idProofUpload" class="file-input" accept=".pdf,.jpg,.jpeg,.png">
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Form Actions -->
                    <div class="form-actions">
                        <button type="button" class="btn-reset">Reset Form</button>
                        <button type="submit" class="btn-submit">Submit Admission</button>
                    </div>
                </form>
            </div>
        </div>
    </main>
</div>

<!-- Footer -->
<footer class="app-footer">
    <div class="footer-content">
        <div class="footer-links">
            <a href="#resources">Resources</a>
            <a href="#legal">Legal</a>
            <a href="#contact">Contact Us</a>
        </div>
        <div class="footer-social">
            <a href="#"><i class="bi bi-facebook"></i></a>
            <a href="#"><i class="bi bi-twitter"></i></a>
            <a href="#"><i class="bi bi-linkedin"></i></a>
        </div>
    </div>
    <div class="footer-bottom">
        <p>Â© 2024 MediFlow Inc.</p>
        <p>Made with <span style="color: #6366f1;">Visily</span></p>
    </div>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
// File upload functionality
document.querySelector('.upload-area').addEventListener('click', function() {
    document.getElementById('idProofUpload').click();
});

document.getElementById('idProofUpload').addEventListener('change', function(e) {
    const file = e.target.files[0];
    if (file) {
        document.querySelector('.upload-text').textContent = `Selected: ${file.name}`;
    }
});

// Form reset functionality
document.querySelector('.btn-reset').addEventListener('click', function() {
    document.querySelector('.admission-form').reset();
    document.querySelector('.upload-text').textContent = 'Drag & drop file or click to upload';
});

// Form submission
document.querySelector('.admission-form').addEventListener('submit', function(e) {
    e.preventDefault();
    
    // Collect form data
    const formData = {
        fullName: document.getElementById('fullName').value,
        fatherName: document.getElementById('fatherName').value,
        contactNumber: document.getElementById('contactNumber').value,
        streetAddress: document.getElementById('streetAddress').value,
        district: document.getElementById('district').value,
        stateProvince: document.getElementById('stateProvince').value,
        country: document.getElementById('country').value,
        knownAllergies: document.getElementById('knownAllergies').value,
        selectHospital: document.getElementById('selectHospital').value,
        idProofUpload: document.getElementById('idProofUpload').files[0]
    };
    
    // Basic validation
    if (!formData.fullName || !formData.contactNumber || !formData.selectHospital) {
        alert('Please fill in all required fields.');
        return;
    }
    
    console.log('Admission Data:', formData);
    alert('Patient admission submitted successfully!');
});
</script>
</body>
</html>